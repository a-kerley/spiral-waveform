{
  "name": "spiral-waveform-player",
  "version": "1.0.0",
  "description": "Beautiful circular audio waveform visualizer with interactive playback controls",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "serve": "http-server -p 5500 -c-1 -o",
    "build": "vite build",
    "preview": "vite preview",
    "analyze": "vite build && open dist/stats.html",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:ci": "vitest run",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report"
  },
  "keywords": [
    "audio",
    "waveform",
    "visualizer",
    "canvas",
    "web-audio",
    "music-player"
  ],
  "author": "a-kerley",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@rollup/rollup-darwin-arm64": "^4.52.5",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "happy-dom": "^12.10.3",
    "http-server": "^14.1.1",
    "rollup-plugin-visualizer": "^6.0.5",
    "terser": "^5.44.0",
    "vite": "^5.4.21",
    "vite-plugin-compression": "^0.5.1",
    "vitest": "^1.0.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/a-kerley/spiral-waveform.git"
  },
  "bugs": {
    "url": "https://github.com/a-kerley/spiral-waveform/issues"
  },
  "homepage": "https://github.com/a-kerley/spiral-waveform#readme"
}
